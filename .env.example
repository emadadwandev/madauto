APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Multi-Tenancy Domain Configuration
APP_DOMAIN=localhost
ADMIN_SUBDOMAIN=admin

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.localhost

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# For development, use Mailtrap SDK (https://mailtrap.io)
# MAIL_MAILER options: mailtrap-sdk, smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailtrap SDK Settings (Recommended for testing)
# Get your API key from: https://mailtrap.io/api-tokens
# For testing emails (sandbox): use sandbox.api.mailtrap.io
# For sending real emails (production): use send.api.mailtrap.io
# For bulk campaigns: use bulk.api.mailtrap.io
MAILTRAP_API_KEY=
MAILTRAP_HOST=sandbox.api.mailtrap.io
MAILTRAP_INBOX_ID=

# Alternative: Mailtrap SMTP Settings (Legacy method)
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Loyverse API Configuration
LOYVERSE_API_URL=https://api.loyverse.com
LOYVERSE_ACCESS_TOKEN=

# Careem Webhook Configuration
CAREEM_WEBHOOK_SECRET=

# Talabat Webhook Configuration
TALABAT_API_KEY=

# Loyverse Receipt Defaults
LOYVERSE_STORE_ID=
LOYVERSE_POS_DEVICE_ID=
LOYVERSE_EMPLOYEE_ID=

# ============================================
# Platform Catalog API Configuration
# ============================================

# Careem Now Catalog API
# Documentation: https://docs.careemnow.com/#tag/Catalog-API-overview
CAREEM_CATALOG_ENABLED=true
CAREEM_API_URL=https://api-staging.careemnow.com
CAREEM_TOKEN_URL=https://api-staging.careemnow.com/oauth/token
CAREEM_CLIENT_ID=
CAREEM_CLIENT_SECRET=
CAREEM_SCOPE=catalog:write

# Talabat (Delivery Hero) Catalog API
# Documentation: https://integration-middleware.stg.restaurant-partners.com/apidocs/pos-middleware-api
TALABAT_CATALOG_ENABLED=true
TALABAT_API_URL=https://integration-middleware.stg.restaurant-partners.com
TALABAT_TOKEN_URL=https://integration-middleware.stg.restaurant-partners.com/v2/login
TALABAT_CLIENT_ID=
TALABAT_CLIENT_SECRET=
TALABAT_CHAIN_CODE=

# Platform Settings
CDN_URL="${APP_URL}/storage"
